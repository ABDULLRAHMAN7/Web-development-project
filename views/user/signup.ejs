<%- include('../partials/header.ejs') -%>
<%- include('../partials/navbar.ejs') -%>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-9 offset-md-2" style= "border-radius: 25px;border-style: solid ; border-color: black;padding: 20px; margin-top: 100px;">
            <h1 class="display-4">Sign up </h1>
            <hr>
            
            
            <%- include('../partials/flashMessages.ejs') -%>
            <form action="/users/signup" method="post">
                <div class="form-group ">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" style="border-color: rgb(29, 28, 28);margin-bottom: 15px;">
                </div>
                <div class="form-group ">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" style="border-color: rgb(29, 28, 28);margin-bottom: 15px;">
                </div>
                <div class="form-group ">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control" style="border-color: rgb(29, 28, 28);margin-bottom: 15px;">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Signup</button>
                </div>
            </form>
            
        </div>
    </div>
</div>
<%- include ('../partials/footer.ejs') -%>